{
    "manifest_version": 3,
    "name": "文本转语音(TTS) 展示 (chrome.tts && chrome.ttsEngine)",
    "version": "1.0",
    "description": "展示 chrome.tts && chrome.ttsEngine API",
    "icons":
    {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_title": "展示 chrome.tts && chrome.ttsEngine API"    
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tts",
        "ttsEngine"
    ]
}