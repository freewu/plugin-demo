{
    "manifest_version": 3,
    "name": "获屏幕、单个窗口或单个标签页的内容 (chrome.desktopCapture)",
    "version": "1.0",
    "description": "展示 chrome.desktopCapture API 相关功能",
    "icons":
    {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_title": "展示 chrome.desktopCapture API 相关功能",
        "default_popup": "pages/action.html"
    },
    "permissions": [
        "desktopCapture",
        "tabs"
    ]
}