{
    "manifest_version": 3,
    "name": "检测用户是否空闲，以及在用户空闲时执行操作 展示 (chrome.idle)",
    "version": "1.0",
    "description": "展示 chrome.idle API",
    "icons":
    {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_icon": "images/icon.png",
        "default_title": "展示 chrome.idle API"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "idle"
    ]
}