{
    "manifest_version": 3,
    "name": "标签页 展示 (chrome.tabs)",
    "version": "1.0",
    "description": "展示 chrome.tabs API",
    "icons":
    {
        "16": "images/icon.png",
        "48": "images/icon.png",
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "pages/action.html",
        "default_title": "标签页 展示 (chrome.tabs)",
        "default_icon": "images/icon.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "tabGroups",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}